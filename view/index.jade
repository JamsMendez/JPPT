extends layout

block js
	script(src='/js/jquery-1.8.2.min.js')
	script(src='/js/jquery.timer.js')
	script(src='/socket.io/socket.io.js')
	script(src='/js/app.js')
block content
	section#content-app
		h3 Piedra, Papel y Tijeras
		div(class='content')
			input#user(type='text', placeholder='Username')
			input#btn-user(type='button', value='Login')
		div(class='content')
			span#notification
		// div(class='content list')
		div(class='content')
			table
				tr
					td
						span#nameuser
					td
						span#yourchallenging
					td
						| Usuarios
						br 
						| Conectados
				tr
					td
						img(src='/img/you.png', alt='Logo de Knight', width='70', height='100')
					td
						img(src='/img/his.png', alt='Logo de Evil', width='90', height='110')
					td
						ul#listuser
		div(class='content')
			input#challenging(type='text', placeholder='Adversary')
			input#btn-challenge(type='button', value='Fight')	
		
		div(class='content')
			label#indication Elija su Arma
			br  
			button#stone(class='btn')
				img(src='/img/stone.png', alt='Imagen de Arma') 
			button#scissors(class='btn')
				img(src='/img/scissors.png', alt='Imagen de Arma') 
			button#role(class='btn')
				img(src='/img/role.png', alt='Imagen de Arma')
			br	
			input#robot(type='checkbox', value='robot', checked)	
			|  Modo Robot 
		div(class='content')
			div#p1(class='content-weapon')
				img(class='weapon', src='/img/none.png', alt='Arma de Player 1')
			div#p2(class='content-weapon')
				img(class='weapon', src='/img/none.png', alt='Arma de Player 2')
			div(class='content')
				input#close(type='button', value='Terminar Duelo')
	footer
		a(href='https://github.com/JamsMendez/JPPT') Ver en Github
